{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 1,
    "lineWidth": 100
  },
  "javascript": {
    "globals": ["Liveblocks", "React"],
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded",
      "lineWidth": 100
    }
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": "warn"
      },
      "correctness": {
        "noUndeclaredDependencies": "off",
        "noUndeclaredVariables": "off",
        "useHookAtTopLevel": "off",
        "noUnusedVariables": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "noForEach": "warn",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 50
          }
        }
      },
      "style": {
        "useFilenamingConvention": "off"
      }
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "files": {
    "include": ["*.vue", "*.json"],
    "ignore": [
      "**/node_modules",
      "**/.git",
      "**/.github",
      "**/.vscode",
      "**/dist",
      "**/build",
      "**/coverage",
      "**/.cache",
      "**/*/sanity.types.ts",
      "**/*/sanity-typegen.json"
    ]
  }
}
